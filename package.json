{
    "devDependencies": {
        "@shelex/cypress-allure-plugin": "^2.41.2",
        "allure-commandline": "^2.34.1",
        "cypress": "^15.0.0",
        "rimraf": "^6.0.1"
    },
    "scripts": {
        "clean:allure": "rimraf allure-results allure-report",
        "cy:run": "cypress run --env allure=true",
        "report:gen": "allure generate allure-results --clean -o allure-report",
        "report:open": "allure open allure-report",
        "report:all": "npm run clean:allure && npm run cy:run && npm run report:gen && npm run report:open"
    },
    "format": "prettier --write \"**/*.{js,json,md}\""
}
